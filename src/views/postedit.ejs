<!-- views/postsedit.ejs -->

<div class="card mb-3">
    <div class="card-header">
        Autor: <%= user.firstName %> <%= user.lastName %>
    </div>
    <div class="image-form">
        <img src="<%= post.img %>" class="card-img-top" alt="<%= post.title %>">
    </div>
    <div class="card-body">
        <form method="POST" action="/post/update/<%= post.guid %>">
            <div class="form-group">
                <label for="title">TÃ­tulo</label>
                <input type="text" class="form-control" id="title" name="title" value="<%= post.title %>" required>
            </div>
            <div class="form-group">
                <label for="title">Link de Imagen</label>
                <input type="text" class="form-control" id="img" name="img" value="<%= post.img %>" required>
            </div>
            <div class="form-group">
                <label for="content">Contenido</label>
                <textarea class="form-control content-textarea" id="content" name="content" rows="4" required><%= post.content %></textarea>
            </div>
            <hr><br>
            <div class="d-flex justify-content-end">
                <button type="submit" class="btn btn-success save">Guardar Cambios</button>
                <a href="/post/<%= post.guid %>" class="btn btn-secondary right">Descartar</a>
            </div>
        </form>
        <p class="card-text date"><small class="text-muted">Publicado el <%= post.datePost %></small></p>
        <p class="card-text guid">GUID: <%= post.guid %></p>
    </div>
</div>