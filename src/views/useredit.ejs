<!-- views/useredit.ejs -->

<%
    const fechaNacimiento = new Date(profile.user.birthDate).toISOString().split('T')[0];
%>
<div class="card mt-5">
    <a href="/users/page/1"><span class="close">&#x2715;</span></a>
    <div class="card-body">
        <h1 class="mt-5">Modificar Datos</h1>
        <form action="/user/edit/<%= profile.user.id %>" method="POST" class="mt-4">
            <div class="mb-3">
                <label for="firstName" class="form-label">Nombre:</label>
                <input type="text" id="firstName" name="firstName" class="form-control" value="<%= profile.user.firstName %>" />
            </div>

            <div class="mb-3">
                <label for="lastName" class="form-label">Apellido:</label>
                <input type="text" id="lastName" name="lastName" class="form-control" value="<%= profile.user.lastName %>" />
            </div>

            <div class="mb-3">
                <label for="email" class="form-label">Correo Electrónico:</label>
                <input type="email" id="email" name="email" class="form-control" value="<%= profile.user.email %>" />
            </div>

            <div class="mb-3">
                <label for="birthDate" class="form-label">Fecha de Nacimiento:</label>
                <input type="date" id="birthDate" name="birthDate" class="form-control" value="<%= fechaNacimiento %>" />
            </div>

            <div class="mb-3">
                <label for="gender" class="form-label">Género:</label>
                <input type="text" id="gender" name="gender" class="form-control" value="<%= profile.user.gender %>" />
            </div>

            <div class="mb-3">
                <label for="userLevel" class="form-label">Nivel de Usuario:</label>
                <select id="userLevel" name="role" class="form-control">
                    <option value="1" <%= profile.user.role === 1 ? 'selected' : '' %>>Administrador</option>
                    <option value="2" <%= profile.user.role === 2 ? 'selected' : '' %>>Moderador</option>
                    <option value="3" <%= profile.user.role === 3 ? 'selected' : '' %>>Usuario</option>
                </select>
            </div>

            <div class="mb-3">
                <div class="form-check">
                    <input type="checkbox" id="isActive" name="isActive" class="form-check-input" value="1" <% if (profile.user.isActive) { %>checked<% } %> />
                    <label for="isActive" class="form-check-label">Activo</label>
                </div>
            </div>

            <button type="submit" class="btn save">GUARDAR CAMBIOS</button>
        </form>
    </div>
</div>
<script src="/assets/js/ui-useredit.js"></script>